// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model Shop {
  id        String   @id @default(cuid())
  shop      String   @unique
  installed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GameSettings {
  id                      String   @id @default(cuid())
  shop                    String   @unique
  selectedGame            String   @default("bouncing-ball")
  enabled                 Boolean  @default(true)
  emailRequired           Boolean  @default(true)
  requireName             Boolean  @default(false)
  discountCodeOrderNumber Int      @default(345)
  discountCodePrefix      String   @default("wincode")
  showStickyButton        Boolean  @default(false)
  stickyButtonText        String   @default("Discount Game")
  stickyButtonColor       String   @default("#000000")
  stickyButtonDisplayPage String   @default("any")
  stickyButtonShowOnDesktop Boolean @default(true)
  stickyButtonShowOnMobile Boolean @default(true)
  logoUrl                   String?
  bouncingBallSettings    Json?    // Settings for bouncing-ball game
  horizontalLinesSettings Json?    // Settings for horizontal-lines game
  reactionClickSettings   Json?    // Settings for reaction-click game
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
}
