// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model Shop {
  id        String   @id @default(cuid())
  shop      String   @unique
  installed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GameSettings {
  id                      String   @id @default(cuid())
  shop                    String   @unique
  selectedGame            String   @default("bouncing-ball")
  enabled                 Boolean  @default(true)
  appEmbedEnabled         Boolean  @default(false)
  popupShowOnDesktop      Boolean  @default(true)
  popupShowOnMobile       Boolean  @default(true)
  popupDelay              String   @default("0")
  popupDisplayPage        String   @default("any")
  popupCustomUrls         Json?
  emailRequired           Boolean  @default(true)
  requireName             Boolean  @default(false)
  discountCodeOrderNumber Int      @default(345)
  discountCodePrefix      String   @default("wincode")
  showStickyButton        Boolean  @default(false)
  stickyButtonText        String   @default("Discount Game")
  stickyButtonColor       String   @default("#000000")
  stickyButtonTextColor   String   @default("#ffffff")
  stickyButtonPosition    String   @default("right")
  stickyButtonDisplayPage String   @default("any")
  stickyButtonCustomUrls  Json?
  stickyButtonShowOnDesktop Boolean @default(true)
  stickyButtonShowOnMobile Boolean  @default(true)
  logoUrl                 String?
  logoScale               Int      @default(100)
  logoScaleMobile         Int      @default(100)
  showPopupHeaderText     Boolean  @default(true)
  bouncingBallSettings    Json?
  horizontalLinesSettings Json?
  reactionClickSettings   Json?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
}

model DiscountClaim {
  id          String   @id @default(cuid())
  shop        String
  email       String
  discountCode String
  percentage  Int
  firstName   String?
  lastName    String?
  device      String?
  gameType    String?
  difficulty  String?
  claimedAt   DateTime @default(now())
  
  @@unique([shop, email])
  @@index([shop])
  @@index([email])
}

model PopupView {
  id        String   @id @default(cuid())
  shop      String
  sessionId String
  device    String
  viewedAt  DateTime @default(now())
  
  @@index([shop])
  @@index([sessionId])
}

model GamePlay {
  id        String   @id @default(cuid())
  shop      String
  sessionId String
  device    String
  gameType  String
  playedAt  DateTime @default(now())
  
  @@index([shop])
  @@index([sessionId])
}
